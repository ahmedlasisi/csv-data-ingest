<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            {% block title %}
                {{ site_name }}
            {% endblock %}
        </title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <script defer src="https://unpkg.com/@hotwired/turbo@7.3.0/dist/turbo.es2017-umd.js"></script>
        <script defer src="https://unpkg.com/stimulus@3.0.1/dist/stimulus.umd.js"></script>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="{{ path('dashboard') }}">
                    {{ site_name }}
                </a>
                <div class="d-flex">
                    {% if app.user %}
                        <span class="text-white me-3">
                            Hello,
                            {{ app.user.email }}
                        </span>
                        <a class="btn btn-outline-light btn-sm" href="{{ path('app_logout') }}">
                            Logout
                        </a>
                    {% else %}
                        <a class="btn btn-outline-light btn-sm" href="{{ path('app_login') }}">
                            Login
                        </a>
                    {% endif %}
                </div>
            </div>
        </nav>

        <div class="container mt-4">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
