{% extends 'base.html.twig' %}

{% block title %}
  Broker Config Management
{% endblock %}

{% block body %}
  <div class="container mt-4">
    <h1>
      Broker Configurations
    </h1>

    <a href="{{ path('broker_config_new') }}" class="btn btn-success mb-3">
      Add New Broker Config
    </a>

    {% for message in app.flashes('success') %}
      <div class="alert alert-success">
        {{ message }}
      </div>
    {% endfor %}

    <table class="table table-striped">
      <thead>
        <tr>
          <th>
            Broker
          </th>
          <th>
            File Name
          </th>
          <th>
            Actions
          </th>
        </tr>
      </thead>
      <tbody>
        {% for broker in brokers %}
          <tr>
            <td>
              {{ broker.name }}
            </td>
            <td>
              {{ broker.config.fileName }}
            </td>
            <td>
              <a href="{{ path('broker_config_edit', {'uuid': broker.uuid}) }}" class="btn btn-primary btn-sm">
                Edit
              </a>
              <form action="{{ path('broker_config_delete', {'uuid': broker.uuid}) }}" method="POST" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ broker.uuid) }}">
                  <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">
                    Delete
                  </button>
                </form>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% endblock %}
  